.span {
    color: #999;
}
.info {
    font-size: 12px;
}

/******************************* Garge *********************************/
.line {
    height: 1px;
    width: 100%;
    margin: 5px 0;
    border-bottom: 1px solid #DDD;
}
.icon {
    width: 30px; height: 30px;
}

.date {
    font-size: 10px;
    text-align: right;
}

.more {
    background-image: url("http://img.dzunion.cn/more.png");
    background-position: center right;
    background-repeat:no-repeat;
}

.number {
    color: green;
    font-weight:bold;
}
.small-number {
    color: red;
    font-weight:bold;
}

.btn {
    font-size: 15px;
    border:0;
    color:#CC7B5A;
}

.status-box {
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}

