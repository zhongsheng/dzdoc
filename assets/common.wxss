 }


.flex-justify-left {
    width: 100%;
    display: flex;
    justify-content: start;
    flex-flow:row;
}
.flex-justify-center {
    flex-flow:row wrap;
    justify-content:center;
    align-items: center;

}
.flex-align-center {
    align-content: center;
    align-items: center;
}

.line {
    height: 1px;
    width: 100%;
    margin: 5px 0;
    border-bottom: 1px solid #DDD;
}
