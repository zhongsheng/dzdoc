/******************************* Container *******************************/
#main {
    margin: 5;
    padding: 5px;
}

.item-box {
    border: 2px solid #4F4F4F;
    margin: 5px;
    padding: 5px 10px;
    border-radius: 5px;
}

/******************************* Layout ********************************/
.flex-justify-left {
    width: 100%;
    display: flex;
    justify-content: start;
    flex-flow:row;
}

.flex-justify-center {
    display: flex;
    flex-flow:row wrap;
    justify-content:center;
    align-items: center;
    text-align: center;
}

.flex-align-center {
    display: flex;
    flex-flow:row wrap;
    align-content: center;
    align-items: center;
}

.row {
    flex-direction: row;
    display: flex;
    padding: 5px;
}

