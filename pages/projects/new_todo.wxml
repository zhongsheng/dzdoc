
<view id="main" class="product-edit">
  <text>{{tip}}</text>
  <form bindsubmit="formSubmit">

    <view class="section">
      <input type="text" class="input-text" name="todo_list[name]" placeholder="任务名称" auto-focus/>
    </view>
 

    <view class="hide">
      <input name="todo_list[project_id]" value="{{project_id}}" />
    </view>

    <view class="section">
      <button formType="submit">提交</button>
    </view>

    <view class='section'>{{error}}</view>
  </form>

</view>